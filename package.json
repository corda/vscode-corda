{
	"name": "vscode-corda",
	"displayName": "VSCode-Corda",
	"publisher": "R3",
	"description": "A tool for Corda developers.",
	"version": "0.1.1",
	"license": "Apache-2.0",
	"engines": {
		"vscode": "^1.47.0"
	},
	"galleryBanner": {
		"color": "#9C5656",
		"theme": "dark"
	},
	"categories": [
		"Debuggers",
		"Programming Languages",
		"Other"
	],
	"keywords": [
		"corda",
		"blockchain",
		"java",
		"kotlin",
		"testing"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/corda/vscode-corda.git"
	},
	"bugs": {
		"url": "https://github.com/corda/vscode-corda/issues",
		"email": "devrel@r3.com"
	},
	"icon": "./media/vscode-corda.png",
	"homepage": "https://www.corda.net/develop/",
	"activationEvents": [
		"onView:cordaTemplates",
		"onView:cordaOperations",
		"onView:cordaDependencies",
		"onView:cordaFlows",
		"onView:cordaContracts",
		"onView:cordaStates",
		"onView:cordaMockNetwork",
		"onView:cordaSamples"
	],
	"main": "./out/extension.js",
	"contributes": {
		"viewsContainers": {
			"activitybar": [
				{
					"id": "corda",
					"title": "Corda",
					"icon": "media/corda-actBar.svg"
				}
			]
		},
		"views": {
			"corda": [
				{
					"id": "cordaProjects",
					"name": "CorDapp Projects",
					"visibility": "collapsed"
				},
				{
					"id": "cordaOperations",
					"name": "Operations",
					"visibility": "collapsed"
				},
				{
					"id": "cordaMockNetwork",
					"name": "Corda Mock Network",
					"visibility": "collapsed"
				},
				{
					"id": "cordaDependencies",
					"name": "Dependencies",
					"visibility": "collapsed"
				},
				{
					"id": "cordaFlows",
					"name": "Flows",
					"visibility": "collapsed"
				},
				{
					"id": "cordaContracts",
					"name": "Contracts",
					"visibility": "collapsed"
				},
				{
					"id": "cordaStates",
					"name": "States",
					"visibility": "collapsed"
				}
			]
		},
		"commands": [
			{
				"command": "cordaProjects.new",
				"title": "New Project",
				"icon": "$(repo-clone)"
			},
			{
				"command": "cordaFlows.add",
				"title": "Add",
				"icon": "$(add)"
			},
			{
				"command": "cordaContracts.add",
				"title": "Add",
				"icon": "$(add)"
			},
			{
				"command": "cordaStates.add",
				"title": "Add",
				"icon": "$(add)"
			},
			{
				"command": "cordaFlows.refresh",
				"title": "Refresh",
				"icon": "$(refresh)"
			},
			{
				"command": "cordaContracts.refresh",
				"title": "Refresh",
				"icon": "$(refresh)"
			},
			{
				"command": "corda.mockNetwork.edit",
				"title": "Edit Mock Network",
				"icon": "$(wrench)"
			},
			{
				"command": "corda.mockNetwork.deployNodes",
				"title": "Deply Nodes on Mock Network",
				"icon": "$(rocket)"
			},
			{
				"command": "corda.mocknetwork.runNodes",
				"title": "Run Mock Network",
				"icon": "$(run-all)"
			},
			{
				"command": "corda.runFlow",
				"title": "Run Flow (Create Transaction)",
				"icon": "$(run)"
			},
			{
				"command": "corda.vaultQuery",
				"title": "Vault Query (View Transactions)",
				"icon": "$(search)"
			},
			{
				"command": "corda.logViewer",
				"title": "Log Viewer",
				"icon": "$(telescope)"
			}
		],
		"menus": {
			"commandPalette": [],
			"view/title": [
				{
					"command": "cordaProjects.new",
					"when": "view == cordaProjects",
					"group": "navigation"
				},
				{
					"command": "cordaFlows.add",
					"when": "view == cordaFlows",
					"group": "navigation"
				},
				{
					"command": "cordaContracts.add",
					"when": "view == cordaContracts",
					"group": "navigation"
				},
				{
					"command": "cordaStates.add",
					"when": "view == cordaStates",
					"group": "navigation"
				},
				{
					"command": "corda.mockNetwork.edit",
					"when": "view == cordaMockNetwork",
					"group": "navigation@0"
				},
				{
					"command": "corda.mockNetwork.deployNodes",
					"when": "view == cordaMockNetwork",
					"group": "navigation@1"
				},
				{
					"command": "corda.mocknetwork.runNodes",
					"when": "view == cordaMockNetwork",
					"group": "navigation@2"
				}
			],
			"view/item/context": [
				{
					"command": "corda.runFlow",
					"when": "view == cordaMockNetwork && viewItem == node",
					"group": "inline@0"
				},
				{
					"command": "corda.vaultQuery",
					"when": "view == cordaMockNetwork && viewItem == node",
					"group": "inline@1"
				},
				{
					"command": "corda.logViewer",
					"when": "view == cordaMockNetwork && viewItem == node",
					"group": "inline@2"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "npm-run-all compile:*",
		"compile:extension": "tsc -p ./",
		"compile:views": "webpack --mode development",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@babel/core": "^7.9.0",
		"@babel/plugin-proposal-class-properties": "^7.8.3",
		"@babel/preset-env": "^7.9.5",
		"@babel/preset-react": "^7.9.4",
		"@types/find": "^0.2.1",
		"@types/node": "^10.17.30",
		"@types/react-dom": "^16.9.8",
		"@types/vscode": "^1.36.0",
		"babel-loader": "^8.1.0",
		"css-loader": "^3.5.2",
		"java-parser": "^0.8.2",
		"npm-run-all": "^4.1.3",
		"style-loader": "^1.1.3",
		"ts-import-plugin": "^1.5.4",
		"ts-loader": "^8.0.2",
		"tslint": "^5.12.1",
		"typescript": "^3.3.1",
		"url-loader": "^4.1.0",
		"webpack": "^4.15.1",
		"webpack-cli": "^3.3.11"
	},
	"dependencies": {
		"@material-ui/core": "^4.11.0",
		"@material-ui/icons": "^4.9.1",
		"adm-zip": "^0.4.16",
		"@types/react-window": "^1.8.2",
		"@types/react-window-infinite-loader": "^1.0.3",
		"axios": "^0.19.2",
		"axios-retry": "^3.1.2",
		"bootstrap": "^4.5.2",
		"find": "^0.3.0",
		"lodash.merge": "^4.6.2",
		"popper": "^1.0.1",
		"react": "^16.13.1",
		"react-bootstrap": "^1.3.0",
		"react-collapsible": "^2.8.0",
		"react-dom": "^16.13.1",
		"react-dropdown": "^1.8.0",
		"react-dropdown-now": "^3.1.1",
		"react-native-elements": "^2.3.2",
		"react-native-fs": "^2.16.6",
		"react-native-paper": "^4.1.0",
		"react-redux": "^7.1.3",
		"react-redux-toastr": "^7.6.4",
		"react-super-responsive-table": "^5.1.1",
		"react-virtualized": "^9.22.2",
		"react-window": "^1.8.5",
		"react-window-infinite-loader": "^1.0.5",
		"redux": "^4.0.4",
		"redux-devtools-extension": "^2.13.8",
		"redux-thunk": "^2.3.0",
		"responsive-table": "^0.1.2",
		"simple-flexbox": "^2.3.2"
	}
}
